@model ZLERP.Model.CarManage.CarMaintainItem
@section HeaderSection{
    <script src="@Url.Content("~/Scripts/Views/CarManage/CarMaintainItem.js")" type="text/javascript" language="javascript"> </script>
    <script type="text/javascript">
        var options = {
            storeUrl: '@Url.Action("Find")',
            LP_TOPY_SHORTUrl: '@Url.Action("LP_TOPY_SHORT", "SC_Fixed")'
        };
        $(function () {
            CarMaintainItemIndexInit(options);
        });
    </script>
}
<div id="MyJqGrid">
</div>
<div id="MyFormDiv" class="mvcform" style="display: none;">
    @using (Html.BeginForm())
    {@Html.ValidationSummary()
        @Html.HiddenFor(m => m.ID)
        <table class="mvcform">
            <tr> 
                <td>@Html.LabelFor(m => m.ItemName)@Html.EditorFor(m => m.ItemName)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.ItemType)@Html.EditorFor(m => m.ItemType) 
                </td>
                 <td>@Html.LabelFor(m => m.BrevityCode)@Html.TextBoxFor(m => m.BrevityCode, new { readOnly = true, @class = "inputReadOnly" }) </td>
            </tr>
              <tr>
               <td>@Html.LabelFor(m => m.MaterialPrice)@Html.EditorFor(m => m.MaterialPrice)
                </td>
                <td>@Html.LabelFor(m => m.Unit)@Html.EditorFor(m => m.Unit)
                </td> 
            </tr> 
          <tr> 
                  <td colspan=2>@Html.LabelFor(m => m.Remark)@Html.TextAreaFor(m => m.Remark, new { style = "width:75%" })</td> 
            </tr> 
        </table>
    }
</div>
