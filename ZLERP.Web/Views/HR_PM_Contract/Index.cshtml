@model ZLERP.Model.HR.HR_PM_Contract 
@section HeaderSection{
    <script src="@Url.Content("~/Scripts/Views/HR/HR_PM_Contract.js")" type="text/javascript" language="javascript"> </script>
    <script type="text/javascript">
        $(function () {
            hr_pm_contractIndexInit('@Url.Action("Find")');
        });
    </script>
    <style type="text/css">
        fieldset
        {
            padding: 0.1px;
            margin: 1px;
            width: 100%;
            color: #333;
            border: #06c dashed 1px;
        }
        legend
        {
            color: #1D5987;
            font-weight: bold;
            background: #fff;
            border: #b6b6b6 solid 1px;
            padding: 1px 3px;
        }
    </style>
}
<div id="MyJqGrid">
</div>
<div id="MyFormDiv" class="mvcform" style="display: none;">
    @using (Html.BeginForm())
    {@Html.ValidationSummary()
        <table class="mvcform">
            <tr style="display: none;">
                <td>@Html.LabelFor(m => m.ID)@Html.EditorFor(m => m.ID)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.PersonID)@Html.AutoComplete("PersonID", "PersonName", "Combo", "HR_Base_Personnel", "ID", "Name", "")
                </td>
                @*<td>@Html.LabelFor(m=>m.PersonName)@Html.EditorFor(m=>m.PersonName)</td>*@
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.PersonPym)@Html.TextBoxFor(m => m.PersonPym, new { @readonly = "readonly", @class = "inputReadOnly" })
                </td>
                <td style="display: none;">@Html.LabelFor(m => m.DepartmentID)@Html.EditorFor(m => m.DepartmentID)
                </td>
                <td>@Html.LabelFor(m => m.DepartmentName)@Html.TextBoxFor(m => m.DepartmentName, new { @readonly = "readonly", @class = "inputReadOnly" })
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.ContractType)@Html.DropDownListFor(m => m.ContractType, (IEnumerable<SelectListItem>)ViewBag.ContractTypeList, new { @class = "text", style = "width: 137px" })
                </td>
                <td>@Html.LabelFor(m => m.ContractNo)@Html.EditorFor(m => m.ContractNo)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.ContractName)@Html.EditorFor(m => m.ContractName)
                </td>
                <td>@Html.LabelFor(m => m.SignDate)@Html.EditorFor(m => m.SignDate, new { defaultValue = @DateTime.Now.ToString("yyyy-MM-dd") })
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.ProbationWage)@Html.EditorFor(m => m.ProbationWage)
                </td>
                <td>@Html.LabelFor(m => m.CorrectionWage)@Html.EditorFor(m => m.CorrectionWage)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.IsTerm)@Html.CheckBoxFor(m => m.IsTerm)
                </td>
            </tr>
        </table>
    
        <br />
        <fieldset>
            <table class="mvcform">
                <tr>
                    <td>@Html.LabelFor(m => m.ProbationStart)@Html.EditorFor(m => m.ProbationStart)
                    </td>
                    <td>@Html.LabelFor(m => m.ProbationEnd)@Html.EditorFor(m => m.ProbationEnd)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.ProbationMonth)@Html.EditorFor(m => m.ProbationMonth)
                    </td>
                    <td>@Html.LabelFor(m => m.ProbationDay)@Html.EditorFor(m => m.ProbationDay)
                    </td>
                </tr>
            </table>
        </fieldset>
        <br />
        <fieldset>
            <table class="mvcform">
                <tr>
                    <td>@Html.LabelFor(m => m.ValidDate)@Html.EditorFor(m => m.ValidDate)
                    </td>
                    <td>@Html.LabelFor(m => m.MatureDate)@Html.EditorFor(m => m.MatureDate)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.ContractTermYear)@Html.EditorFor(m => m.ContractTermYear)
                    </td>
                    <td>@Html.LabelFor(m => m.ContractTermMonth)@Html.EditorFor(m => m.ContractTermMonth)
                    </td>
                </tr>
            </table>
        </fieldset>
    
        <br />
        <table>
            <tr>
                <td colspan="2">@Html.LabelFor(m => m.Meno)@Html.TextAreaFor(m => m.Meno, 3, 55, new { })
                </td>
            </tr>
        </table>
    }
</div>
