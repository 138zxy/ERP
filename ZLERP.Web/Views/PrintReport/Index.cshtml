@model ZLERP.Model.SystemManage.PrintReport
@section HeaderSection{ 
    <script src="@Url.Content("~/Scripts/ajaxfileupload.js")" type="text/javascript" language="javascript"> </script>
<script src="@Url.Content("~/Scripts/Views/SystemManage/PrintReport.js")" type="text/javascript" language="javascript"> </script>
    <script type="text/javascript">
        var options = {
            storeUrl: '@Url.Action("Find", "PrintReport")' ,
            editUrl: '@Url.Action("Update", "PrintReport")' ,
            CopyUrl: '@Url.Action("Copy", "PrintReport")' ,
            UploadUrl: '@Url.Action("Upload", "PrintReport")' 
        };
        $(function () {
            PrintReportIndexInit(options);
        });
</script>
}
<div id="PrintReportGrid"></div> 

<div id="PrintReportForm" class="mvcform" style="display:none;">

@using (Html.BeginForm())
{@Html.ValidationSummary()
    @Html.HiddenFor(m => m.ID) 
<table class="mvcform"> 
        <tr> 
        <td>@Html.LabelFor(m => m.ReportNo)@Html.EditorFor(m => m.ReportNo)</td>
        <td>@Html.LabelFor(m => m.ReportName)@Html.EditorFor(m => m.ReportName)</td>
        </tr> 
         <tr> 
        <td>@Html.LabelFor(m => m.ReportType)@Html.DropDownListFor(m => m.ReportType, (IEnumerable<SelectListItem>)ViewBag.ReportType, "", new { @class = "text", style = "width:135px;" })</td>
        <td>@Html.LabelFor(m => m.SoucreType)@Html.DropDownListFor(m => m.SoucreType, (IEnumerable<SelectListItem>)ViewBag.SoucreType, "", new { @class = "text", style = "width:135px;" })</td>
     </tr>  
    <tr> 
        <td colspan="2">@Html.LabelFor(m => m.SqlData)@Html.TextAreaFor(m => m.SqlData, new { style = "width:70%" }) </td>
    </tr> 
    <tr>  
        <td colspan="2">@Html.LabelFor(m => m.FilePath)@Html.TextBoxFor(m => m.FilePath, new { style = "width:70%" , readOnly = true, @class = "inputReadOnly" })</td>
        </tr> 
    <tr> 
        <td colspan="2">@Html.LabelFor(m => m.Remark)@Html.TextAreaFor(m => m.Remark, new { style = "width:70%" }) </td>
    </tr> 

     <tr> 
        <td colspan="2"><p>1.编号就是存储文件的名称，sql语句中请使用‘@@’表示参数，参数名称保存与路径参数名一致</p>
                        <p>2.存过过程只需要输入存储过程名称，路径参数名与存储过程参数名一致</p>
                        <p>3.请保持编号和报表样式文件名称一致</p>
                        <p>4.请保持编号和Url路径参数report的值一致</p>
        </td>
    </tr> 
</table>
}
</div>

<div id="uploadFilediv">
  <label>附件</label><input type="file" id="uploadFile" name="upload" />
</div> 
 

