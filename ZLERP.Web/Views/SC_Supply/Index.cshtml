@model ZLERP.Model.SupplyChain.SC_Supply
@section HeaderSection{
    <script src="@Url.Content("~/Scripts/Views/SupplyChain/SC_Supply.js")" type="text/javascript" language="javascript"> </script>
    <script type="text/javascript">
        var options = {
            storeUrl: '@Url.Action("Find")'
        };
        $(function () {
            SC_SupplyIndexInit(options);
        });
    </script>
}
<div id="MyJqGrid">
</div>
<div id="MyFormDiv" class="mvcform" style="display: none;">
    @using (Html.BeginForm())
    {@Html.ValidationSummary()
        @Html.HiddenFor(m => m.ID)
        <table class="mvcform">
            <tr>
                <td>@Html.LabelFor(m => m.SupplierName)@Html.EditorFor(m => m.SupplierName)
                </td>
                <td>@Html.LabelFor(m => m.SupplierType)@Html.DropDownListFor(m => m.SupplierType, (IEnumerable<SelectListItem>)ViewBag.ItemsType, "", new { @class = "text", style = "width:120px;", id = "SupplierType" })
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Adrress)@Html.EditorFor(m => m.Adrress)
                </td>
                <td>@Html.LabelFor(m => m.Linker)@Html.EditorFor(m => m.Linker)
                </td>
            </tr>
             <tr>
                <td>@Html.LabelFor(m => m.LinkPhone)@Html.EditorFor(m => m.LinkPhone)
                </td>
                <td>@Html.LabelFor(m => m.LinkPhone2)@Html.EditorFor(m => m.LinkPhone2)
                </td>
             </tr>
             <tr>
                <td>@Html.LabelFor(m => m.AccountNo)@Html.EditorFor(m => m.AccountNo)
                </td>
                <td>@Html.LabelFor(m => m.TaxNo)@Html.EditorFor(m => m.TaxNo)
                </td>
             </tr>
             <tr>
                <td>@Html.LabelFor(m => m.PaidIn)@Html.TextBoxFor(m => m.PaidIn, new { Value = "0" }) 
                </td>
                  <td>@Html.LabelFor(m => m.PrepayInit)@Html.TextBoxFor(m => m.PrepayInit, new { Value = "0" })
                </td>
             </tr> 
               <tr>
                <td>@Html.LabelFor(m => m.Discount)@Html.EditorFor(m => m.Discount)
                </td>
                
                <td>@Html.LabelFor(m => m.FinanceType)@Html.DropDownListFor(m => m.FinanceType, (IEnumerable<SelectListItem>)ViewBag.FinanceType, "", new { @class = "text", style = "width:120px;", id = "FinanceType" })
                </td>
             </tr>
                 <tr> 
                <td>@Html.LabelFor(m => m.IsOff)@Html.EditorFor(m => m.IsOff)
                </td> 
                <td>@Html.LabelFor(m => m.Remark)@Html.EditorFor(m => m.Remark)
                </td> 
             </tr>  
        </table>
    }
</div>
