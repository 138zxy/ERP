@model ZLERP.Model.StuffSale 
@section HeaderSection{
    <script src="@Url.Content("~/Scripts/Views/StuffSale/StuffSale.js")" type="text/javascript" language="javascript"> </script>
    <script type="text/javascript">
        $(function () {
            StuffSaleIndexInit({
                storeUrl: '@Url.Action("Find")'
            });
        });
    </script>
}
<div id="MyJqGrid">
</div>

<div id="MyFormDiv" class="mvcform" style="display: none;">
    @using (Html.BeginForm())
    {@Html.ValidationSummary()
        <table class="mvcform">
                <tr>
                    @Html.HiddenFor(m => m.ID)
                    <td>@Html.LabelFor(m => m.CarID)@Html.AutoComplete("CarID", "CarNo", "Combo", "Car", "ID", "CarNo", "", new { @data_val_required = "运输车号 字段是必需的", data_val = "true" })
                    </td> 
                    <td>@Html.LabelFor(m => m.StuffID)@Html.AutoComplete("StuffID", "StuffName", "Combo", "StuffInfo", "ID", "StuffName", "", new { @data_val_required = "材料名称 字段是必需的", data_val = "true" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.CompanyID)@Html.AutoComplete("CompanyID", "CompName", "ComboByKey", "Company", "ID", "CompName", "CompName", " 1=1 ", new { @data_val_required = "供货单位 字段是必需的", data_val = "true" })
                    </td>
                    <td>@Html.LabelFor(m => m.SupplyID)@Html.AutoComplete("ID", "SupplyID", "ComboByKey", "SupplyInfo", "ID", "ShortName", "SupplyName", "supplykind in ('Su1','Su6') and IsUsed =1 ", new { @data_val_required = "收货单位 字段是必需的", data_val = "true" })
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.TotalWeight)@Html.EditorFor(m => m.TotalWeight)</td>
                    <td>@Html.LabelFor(m => m.CarWeight)@Html.EditorFor(m => m.CarWeight)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Weight)@Html.TextBoxFor(m => m.Weight, new { Value = 0, @readonly = "readonly" })</td>
                    <td>@Html.LabelFor(m => m.WeightMan)@Html.AutoComplete("UserID", "WeightMan", "Combo", "User", "ID", "TrueName")</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.ArriveTime)@Html.EditorFor(m => m.ArriveTime, "DateTimeWithTime")</td>
                    <td>@Html.LabelFor(m => m.DeliveryTime)@Html.EditorFor(m => m.DeliveryTime, "DateTimeWithTime")</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.WeightName)@Html.EditorFor(m => m.WeightName)</td>
                </tr>
            <tr>
                <td colspan="3">@Html.LabelFor(m => m.Remark)@Html.TextAreaFor(m => m.Remark, new { style = "width:365px" }) </td>
      
            </tr>
        </table>
    }
</div>
