@model ZLERP.Model.HR.HR_KQ_BuQian 
@section HeaderSection{
    <script type="text/javascript" src="@Url.Content("~/Scripts/daterangepicker.jQuery.js")"></script>
    <script src="@Url.Content("~/Scripts/Views/HR/HR_KQ_BuQian.js")" type="text/javascript" language="javascript"> </script>
    <script type="text/javascript">
        var options = {
            storeUrl: '@Url.Action("Find")'
        };
        $(function () {
            HR_KQ_BuQianIndexInit(options);
        });
    </script>
}
<div id="MyJqGrid">
</div>
<div id="MyFormDiv" class="mvcform" style="display: none;">
    @using (Html.BeginForm())
    {@Html.ValidationSummary()
        @Html.HiddenFor(m => m.ID )
        <table class="mvcform">
        <tr> 
            <td> 
                 @Html.LabelFor(m => m.PersonID)@Html.AutoComplete("PersonID", "PersonIDText", "Combo", "HR_Base_Personnel", "ID", "Name", "1=1", new { style = "width:120px" }) 
            </td>
        </tr>
         <tr> 
            <td>
                 @Html.LabelFor(m => m.BuQianTime)@Html.EditorFor(m => m.BuQianTime, "DateTimeWithTime")
            </td>
        </tr>
         <tr> 
            <td>
                 @Html.LabelFor(m => m.Opearter) @Html.DropDownListFor(m => m.Opearter, (IEnumerable<SelectListItem>)ViewBag.PersonnelText, "", new { @class = "text", style = "width:120px;" })
          </td>
        </tr> 
        <tr> 
            <td>@Html.LabelFor(m => m.Remark)@Html.TextAreaFor(m => m.Remark)
            </td>
        </tr> 
        </table>
    }
</div>
