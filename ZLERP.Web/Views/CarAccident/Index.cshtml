@model ZLERP.Model.CarManage.CarAccident
@section HeaderSection{
    <script src="@Url.Content("~/Scripts/Views/CarManage/CarAccident.js")" type="text/javascript" language="javascript"> </script>
    <script type="text/javascript">
        var options = {
            storeUrl: '@Url.Action("Find")'
        };
        $(function () {
            CarAccidentIndexInit(options);
        });
    </script>
}
<div id="MyJqGrid">
</div>
<div id="CarAccidentMyFormDiv" class="mvcform" style="display: none;">
    @using (Html.BeginForm())
    {@Html.ValidationSummary()
        @Html.HiddenFor(m => m.ID)
        <table class="mvcform">
            <tr> 
                <td>@Html.LabelFor(m => m.CarID)@Html.DropDownListFor(m => m.CarID, (SelectList)ViewBag.CarList, new { style = "width:140px;" })
                </td>
                <td>@Html.LabelFor(m => m.Driver)@Html.EditorFor(m => m.Driver)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.AccidentDate)@Html.EditorFor(m => m.AccidentDate) </td>
                 <td>@Html.LabelFor(m => m.TrafficPolice)@Html.EditorFor(m => m.TrafficPolice)</td>
            </tr> 
              <tr>
                <td>@Html.LabelFor(m => m.LossCost)@Html.EditorFor(m => m.LossCost)</td> 
                <td>@Html.LabelFor(m => m.SettleCost)@Html.EditorFor(m => m.SettleCost)</td>  
            </tr>  
            <tr> 
                <td>@Html.LabelFor(m => m.SettleDegree)@Html.EditorFor(m => m.SettleDegree)</td>  
                <td>@Html.LabelFor(m => m.InsuranceUnit)@Html.DropDownListFor(m => m.InsuranceUnit, (SelectList)ViewBag.CarDealingsList, "", new { style = "width:140px;" })</td>
            </tr> 
               <tr>
                <td>@Html.LabelFor(m => m.InsuranceNo)@Html.EditorFor(m => m.InsuranceNo)</td> 
                <td>@Html.LabelFor(m => m.SideCarNo)@Html.EditorFor(m => m.SideCarNo)</td>  
            </tr> 
               <tr>
                <td>@Html.LabelFor(m => m.SideName)@Html.EditorFor(m => m.SideName)</td> 
                <td>@Html.LabelFor(m => m.SidePhone)@Html.EditorFor(m => m.SidePhone)</td>  
            </tr>
                   <tr>
                <td>@Html.LabelFor(m => m.SideCarType)@Html.EditorFor(m => m.SideCarType)</td> 
                <td>@Html.LabelFor(m => m.SideUnit)@Html.EditorFor(m => m.SideUnit)</td>  
            </tr>
                   <tr>
                <td>@Html.LabelFor(m => m.SideDegree)@Html.EditorFor(m => m.SideDegree)</td> 
                <td>@Html.LabelFor(m => m.PeopleDec)@Html.EditorFor(m => m.PeopleDec)</td>  
            </tr>
                  <tr> 
                  <td colspan=2>@Html.LabelFor(m => m.AccidentDec)@Html.TextAreaFor(m => m.AccidentDec, new { style = "width:75%" })</td> 
            </tr> 
                  <tr> 
                  <td colspan=2>@Html.LabelFor(m => m.AccidentAdress)@Html.TextAreaFor(m => m.AccidentAdress, new { style = "width:75%" })</td> 
            </tr> 
            
                <tr> 
                  <td colspan=2>@Html.LabelFor(m => m.Remark)@Html.TextAreaFor(m => m.Remark, new { style = "width:75%" })</td> 
            </tr> 
        </table>
    }
</div>
