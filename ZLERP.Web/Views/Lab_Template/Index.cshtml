@model ZLERP.Model.Lab_Template
@section HeaderSection{
<script src="@Url.Content("~/Scripts/Views/Lab_Template/Lab_Template.js")" type="text/javascript" language="javascript"> </script>

<script type="text/javascript">
        $(function () {
            lab_templateIndexInit('@Url.Action("Find")');
        });
</script>
}
<div id="MyJqGrid" style="float: left; width: 68%; margin-right: 1px;">
</div>
<div id="MyJqGridR" style="float: left; width: 31%;">     
</div>

<div id="MyFormDiv" class="mvcform" style="display:none;">
@using (Html.BeginForm())
{@Html.ValidationSummary()
<table class="mvcform"> 
    <tr>
           <td style="display:none">@Html.LabelFor(m => m.ID)@Html.EditorFor(m => m.ID)</td>
        </tr>
    <tr> 
        <td>@Html.LabelFor(m=>m.LabTemplateName)@Html.EditorFor(m=>m.LabTemplateName)</td>
        <td>@Html.LabelFor(m => m.LabTemplateType)@Html.DicEditorFor(m => m.LabTemplateType, DicEnum.LabTemplateType, new { @data_val_required = "字段是必需的", data_val = "true" })</td>
    </tr>
    <tr> 
        <td>@Html.LabelFor(m => m.DocType)@Html.DicEditorFor(m => m.DocType, DicEnum.DocType, new { @data_val_required = "字段是必需的", data_val = "true"})</td>
    </tr>
    <tr> 
        <td colspan="3">@Html.LabelFor(m => m.LabTemplatePath)@Html.TextBoxFor(m => m.LabTemplatePath, new { style = "width:380px;" })</td>
    </tr>

    <tr>
        <td colspan="3">@Html.LabelFor(m => m.Meno)@Html.TextAreaFor(m => m.Meno, 3, 60, new { @class = "text" })
        </td>
    </tr>
    <tr style="display:none;">
            <td colspan="2">
                <label>
                    选择模板
                </label>
                <input type="file" id="uploadFile" name="upload" />
                <div id="Attachments" style="clear: both;">
                </div>
            </td>
     </tr>
</table>

}
</div>

