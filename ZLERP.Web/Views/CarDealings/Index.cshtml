@model ZLERP.Model.CarManage.CarDealings
@section HeaderSection{
    <script src="@Url.Content("~/Scripts/Views/CarManage/CarDealings.js")" type="text/javascript" language="javascript"> </script>
    <script type="text/javascript">
        var options = {
            storeUrl: '@Url.Action("Find")',
            LP_TOPY_SHORTUrl: '@Url.Action("LP_TOPY_SHORT", "SC_Fixed")' 
        };
        $(function () {
            CarDealingsIndexInit(options);
        });
    </script>
}
<div id="MyJqGrid">
</div>
<div id="CarDealingsMyFormDiv" class="mvcform" style="display: none;">
    @using (Html.BeginForm())
    {@Html.ValidationSummary()
        @Html.HiddenFor(m => m.ID)
        <table class="mvcform">
            <tr> 
                <td>@Html.LabelFor(m => m.Name)@Html.EditorFor(m => m.Name)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.DealingsType)@Html.DropDownListFor(m => m.DealingsType, (IEnumerable<SelectListItem>)ViewBag.ItemsType, "", new { @class = "text", style = "width: 120px", id = "DealingsType" })
                </td>
                 <td>@Html.LabelFor(m => m.BrevityCode)@Html.TextBoxFor(m => m.BrevityCode, new { readOnly = true, @class = "inputReadOnly" }) </td>
            </tr>
              <tr>
               <td>@Html.LabelFor(m => m.Linker)@Html.EditorFor(m => m.Linker)
                </td>
                <td>@Html.LabelFor(m => m.LinkPhone)@Html.EditorFor(m => m.LinkPhone)
                </td> 
            </tr>
             <tr>
              <td>@Html.LabelFor(m => m.LinkPhone2)@Html.EditorFor(m => m.LinkPhone2)
                </td>
                <td>@Html.LabelFor(m => m.Mail)@Html.EditorFor(m => m.Mail)
                </td> 
            </tr>
               <tr>
                <td>@Html.LabelFor(m => m.Adress)@Html.EditorFor(m => m.Adress)
                </td>
                <td>@Html.LabelFor(m => m.IsOff)@Html.EditorFor(m => m.IsOff)
                </td> 
            </tr>
          <tr> 
                  <td colspan=2>@Html.LabelFor(m => m.Remark)@Html.TextAreaFor(m => m.Remark, new { style = "width:75%" })</td> 
            </tr> 
        </table>
    }
</div>
