@model ZLERP.Model.ViewModels.ContractBalance
@section HeaderSection{
    <script src="@Url.Content("~/Scripts/Views/Contract/balanceIndex.js")" type="text/javascript" language="javascript"> </script>

    <script type="text/javascript">
        $(function () {
            balanceIndexInit({
                UserStoreUrl: '@Url.Action("Find", "Customer")'
                ,itemStoreUrl: '@Url.Action("Find", "ShippingDocument")'
            });
        });
    </script>
}


<div id="buttonToolbar">
</div>
<div id="Contractid" style="float: left; width: 70%; margin-right:10px;">
</div>
<div id="ContractItemGrid" style="float: left; width: 29%">
</div>
<div id="ExtraPumpGrid" style="float: left; width: 29%">
</div>
<div id="dzGrid" style="float: left; width: 29%">
</div>

<div id="DZForm" style="display: none;">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <table class="mvcform">
            <tr>
                <td>
                 @Html.HiddenFor(m => m.ContractDZ.ID)
                 @Html.HiddenFor(m => m.ContractDZ.CustomerID)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.ContractDZ.DZMoney)@Html.EditorFor(m => m.ContractDZ.DZMoney)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.ContractDZ.Remark)@Html.TextAreaFor(m => m.ContractDZ.Remark)
                </td>
            </tr>
        </table>
    }
</div>
<div id="BalanceAddForm" style="display: none;">
    @using (Html.BeginForm("", "", FormMethod.Post, new { encrypt = "multipart/form-data" }))
    {
        @Html.ValidationSummary()
        <table class="mvcform">
            <tr>
                <td> @Html.LabelFor(m => m.Balance.Balance)@Html.TextBox("Balance1", "", new { style = "width:100px" })</td>                
            </tr>
            <tr>
                <td> @Html.LabelFor(m => m.Balance.Remark)@Html.TextBox("Remark1", "", new {  style = "width:200px" })</td>
            </tr>
        </table>
    }
</div>