@model ZLERP.Model.HR.HR_Base_Data 
@section HeaderSection{
    <script src="@Url.Content("~/Scripts/Views/HR/HR_Base_Data.js")" type="text/javascript" language="javascript"> </script>
    <script type="text/javascript">
        var options = {
            storeUrl: '@Url.Action("Find")'
        };
        $(function () {
            SC_BaseIndexInit(options);
        });
    </script>
}
<div id="MyJqGrid">
</div>
<div id="MyFormDiv" class="mvcform" style="display: none;">
    @using (Html.BeginForm())
    {@Html.ValidationSummary()
        @Html.HiddenFor(m => m.ID )
        <table class="mvcform">
            <tr>
                <td>@Html.LabelFor(m => m.ItemsType)@Html.DropDownListFor(m => m.ItemsType, (IEnumerable<SelectListItem>)ViewBag.ItemsType, "", new { @class = "text", style = "width:120px;", id = "ItemsType" })
                </td>
                <td>@Html.LabelFor(m => m.ItemsName)@Html.EditorFor(m => m.ItemsName)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.ItemsNo)@Html.EditorFor(m => m.ItemsNo)
                </td>
                <td>@Html.LabelFor(m => m.Remark)@Html.EditorFor(m => m.Remark)
                </td>
            </tr> 
             @*<tr>
                <td>
                    @Html.LabelFor(m => m.IsSystem)@Html.CheckBoxFor(m => m.IsSystem)
                </td>
            </tr>*@ 
        </table>
    }
</div>
