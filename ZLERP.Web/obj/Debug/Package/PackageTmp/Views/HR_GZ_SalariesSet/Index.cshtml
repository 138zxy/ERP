@model ZLERP.Model.HR.HR_GZ_SalariesSet 
@section HeaderSection{ 
    <script src="@Url.Content("~/Scripts/Views/HR/HR_GZ_SalariesSet.js")" type="text/javascript" language="javascript"> </script>
    <script type="text/javascript">
        var options = {
            storeUrl: '@Url.Action("Find")',
            editSaveUrl: '@Url.Action("Update")', 
            deptTreeUrl: '@Url.Action("FindTree", "Department")'
        };
        $(function () {
            HR_GZ_SalariesSetIndexInit(options);
        });
    </script>
}
