@model ZLERP.Model.SupplyChain.V_PiaoTo
@section HeaderSection{
<script type="text/javascript" src="@Url.Content("~/Scripts/daterangepicker.jQuery.js")"></script>
<script src="@Url.Content("~/Scripts/Views/SupplyChain/SC_PiaoTo.js")" type="text/javascript" language="javascript"> </script>
    <script type="text/javascript">
        var options = {
            storeUrl: '@Url.Action("Find", "SC_PiaoTo")',
            ZhangstoreUrl: '@Url.Action("Find", "SC_ZhangTo")',
            GetZhangUrl: '@Url.Action("Get", "SC_Goods")',
            GenerateOrderNoUrl: '@Url.Action("GenerateOrderNo", "SC_PiaoTo")',
            ChangeConditionUrl: '@Url.Action("ChangeCondition")',
            PurInUrl: '@Url.Action("PurIn")'
        };
        $(function () {
            SC_PiaoToIndexInit(options);
        });
</script>
}
<div id="SC_PiaoToGrid"></div> 

<div id="SC_PiaoToForm" class="mvcform" style="display:none;">

@using (Html.BeginForm())
{@Html.ValidationSummary()
    @Html.HiddenFor(m => m.SC_PiaoTo.ID)
<table class="mvcform"> 
        <tr> 
        <td>@Html.LabelFor(m => m.SC_PiaoTo.ChangeNo)@Html.TextBoxFor(m => m.SC_PiaoTo.ChangeNo, new { readOnly = true, @class = "inputReadOnly" })</td>
        <td>@Html.LabelFor(m => m.SC_PiaoTo.ChangeDate)@Html.EditorFor(m => m.SC_PiaoTo.ChangeDate)</td>
        </tr> 
         <tr> 
        <td>@Html.LabelFor(m => m.SC_PiaoTo.OutLibID)@Html.DropDownListFor(m => m.SC_PiaoTo.OutLibID, (IEnumerable<SelectListItem>)ViewBag.Libs, "", new { @class = "text", style = "width:135px;" })</td>
        <td>@Html.LabelFor(m => m.SC_PiaoTo.InLibID)@Html.DropDownListFor(m => m.SC_PiaoTo.InLibID, (IEnumerable<SelectListItem>)ViewBag.Libs, "", new { @class = "text", style = "width:135px;" })</td>
    </tr> 
    <tr> 
        <td colspan="2">@Html.LabelFor(m => m.SC_PiaoTo.Remark)@Html.TextAreaFor(m => m.SC_PiaoTo.Remark, new { style = "width:70%" }) </td>
    </tr> 
</table>
}
</div>
<div id="SC_ZhangToGrid"></div> 

<div id="SC_ZhangToForm" class="mvcform" style="display:none;">
@using (Html.BeginForm())
{@Html.ValidationSummary()
    @Html.HiddenFor(m => m.SC_ZhangTo.ID)
    @Html.HiddenFor(m => m.SC_ZhangTo.ChangeNo)   
    @Html.HiddenFor(m => m.SC_ZhangTo.GoodsID)   
    @Html.HiddenFor(m => m.SC_ZhangTo.SC_Goods.GoodsName); 
    <table class="mvcform"> 
    <tr> 
        <td>@Html.LabelFor(m => m.SC_ZhangTo.GoodsID)@Html.AutoComplete("ID", "SC_ZhangTo.SC_Goods.GoodsName", "Combo", "SC_PiaoTo", "ID", "GoodsName", "IsOff=0", new { style = "width:120px" })</td>
    </tr>
     <tr> 
        <td>@Html.LabelFor(m => m.SC_ZhangTo.SC_Goods.Spec)@Html.TextBoxFor(m => m.SC_ZhangTo.SC_Goods.Spec, new { readOnly = true, @class = "inputReadOnly" })</td>
        <td>@Html.LabelFor(m => m.SC_ZhangTo.SC_Goods.Brand)@Html.TextBoxFor(m => m.SC_ZhangTo.SC_Goods.Brand, new { readOnly = true, @class = "inputReadOnly" })</td>
    </tr>
    <tr>  
        <td>@Html.LabelFor(m => m.SC_ZhangTo.PriceUnit)@Html.TextBoxFor(m => m.SC_ZhangTo.PriceUnit, new { readOnly = true, @class = "inputReadOnly" })</td>
       @* <td>@Html.LabelFor(m => m.SC_ZhangTo.SC_Goods.Unit)@Html.TextBoxFor(m => m.SC_ZhangTo.SC_Goods.Unit, new { readOnly = true })</td>*@
        <td >@Html.LabelFor(m => m.SC_ZhangTo.Unit)@Html.DropDownListFor(m => m.SC_ZhangTo.Unit, Enumerable.Empty<SelectListItem>(), new { style = "width:137px;", zlerp = "Combo" })</td>
    
    </tr> 
   
    <tr> 
        <td>@Html.LabelFor(m => m.SC_ZhangTo.Quantity)@Html.EditorFor(m => m.SC_ZhangTo.Quantity)</td>
        <td>@Html.LabelFor(m => m.SC_ZhangTo.ChangeMoney)@Html.TextBoxFor(m => m.SC_ZhangTo.ChangeMoney, new { readOnly = true, @class = "inputReadOnly" })</td>
    </tr>
           <tr>
       <td>@Html.LabelFor(m => m.SC_ZhangTo.UnitRate)@Html.TextBoxFor(m => m.SC_ZhangTo.UnitRate, new { readOnly = true, @class = "inputReadOnly" })
           
       </td>
    </tr>
    <tr> 
        <td>@Html.LabelFor(m => m.SC_ZhangTo.PiNo)@Html.EditorFor(m => m.SC_ZhangTo.PiNo)</td>
    </tr> 
</table>
}
</div>

