                 @Html.LabelFor(m => m.HR_GZ_TakeOff.PersonID)@Html.AutoComplete("HR_GZ_TakeOff.PersonID", "PersonIDText2", "Combo", "HR_Base_Personnel", "ID", "Name", "1=1", new { style = "width:120px" }) 
            </td>
             <td>
