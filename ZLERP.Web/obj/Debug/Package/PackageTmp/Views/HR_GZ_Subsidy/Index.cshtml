            </td>
        </tr>
        <tr>  
             <td>
                 @Html.LabelFor(m => m.HR_GZ_TakeOff.ItemMoney)@Html.EditorFor(m => m.HR_GZ_TakeOff.ItemMoney)
            </td>
               <td>
                 @Html.LabelFor(m => m.HR_GZ_TakeOff.Monthly)@Html.EditorFor(m => m.HR_GZ_TakeOff.Monthly)
            </td>
        </tr>
       <tr> 
             <td>
                 @Html.LabelFor(m => m.HR_GZ_TakeOff.ItemDate)@Html.EditorFor(m => m.HR_GZ_TakeOff.ItemDate)
            </td>
        </tr>
        <tr> 
            <td colspan="2">@Html.LabelFor(m => m.HR_GZ_TakeOff.Remark)@Html.TextAreaFor(m => m.HR_GZ_TakeOff.Remark, new { style = "width:70%" })
