<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="ZLERP.Model.SupplyChain" assembly="ZLERP.Model">
	<class name="ZLERP.Model.SupplyChain.SC_Goods, ZLERP.Model" table="SC_Goods" lazy="true"
    dynamic-insert="true" dynamic-update="true" batch-size="30" optimistic-lock="version">
		<id name="ID" column="ID">
      <generator class="native" />
		</id>
		<version name="Version" column="Version" />
    <property name="GoodsCode" column="GoodsCode" />
    <property name="GoodsName" column="GoodsName" />
    <property name="GoodsNo" column="GoodsNo" />
    <property name="Spec" column="Spec" />
    <property name="Unit" column="Unit" />
    <property name="MinWarning" column="MinWarning" />
    <property name="MaxWarning" column="MaxWarning" />
    <property name="BrevityCode" column="BrevityCode" />
    <property name="Brand" column="Brand" />
    <property name="TypeNo" column="TypeNo" />
    <property name="TypeString" column="TypeString" /> 
    <property name="Price" column="Price" />
    <property name="Price2" column="Price2" />
    <property name="Price3" column="Price3" />
    <property name="LibMoney" column="LibMoney" />
    <property name="SellerNo" column="SellerNo" />
    <property name="PicUrl" column="PicUrl" />
    
    <property name="IsOff" column="IsOff" />
    <property name="IsAuxiliaryUnit" column="IsAuxiliaryUnit" />

    <property name="Remark" column="Remark" /> 
    <property name="BuildTime" column="BuildTime" update="false"/>
    <property name="Builder" column="Builder" update="false"/>
    <property name="ModifyTime" column="ModifyTime" insert="false"/>
    <property name="Modifier" column="Modifier" insert="false"/>
    <property name="Lifecycle" column="Lifecycle" />
    <many-to-one name="SC_GoodsType"  not-found="ignore">
      <column name="TypeNo" sql-type="nvarchar" not-null="false"  />
    </many-to-one>

    <bag name="SC_NowLibs" lazy="true" batch-size="30" inverse="true" >
      <key column="GoodsID"></key>
      <one-to-many class="SC_NowLib"></one-to-many>
    </bag>

    <bag name="SC_GoodsUnits" lazy="true" batch-size="30" inverse="true" >
      <key column="GoodsID"></key>
      <one-to-many class="SC_GoodsUnit"></one-to-many>
    </bag>

    <bag name="Attachments" where="ObjectType='SC_Goods'" batch-size="30" cascade="delete" >
      <key column="ObjectId"/>
      <one-to-many class="ZLERP.Model.Attachment" />
    </bag>
	</class>
</hibernate-mapping>