<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="ZLERP.Model.HR" assembly="ZLERP.Model">
  <class name="ZLERP.Model.HR.HR_KQ_Leave, ZLERP.Model" table="HR_KQ_Leave" lazy="true"
    dynamic-insert="true" dynamic-update="true" batch-size="30" optimistic-lock="version">
    <id name="ID" column="ID">
      <generator class="native" />
    </id>
    <version name="Version" column="Version" />
    <property name="LeaveNo" column="LeaveNo" />
    <property name="PersonID" column="PersonID" />
    <property name="LeaveType" column="LeaveType" />
    <property name="StartTime" column="StartTime" />
    <property name="EndTime" column="EndTime" />
    <property name="DayLong" column="DayLong" /> 
    <property name="Reson" column="Reson" />
    <property name="Remark" column="Remark" />
    <property name="Condition" column="Condition" />
    <property name="AuditTime" column="AuditTime" />
    <property name="Auditor" column="Auditor" /> 
    
    <property name="BuildTime" column="BuildTime" update="false"/>
    <property name="Builder" column="Builder" update="false"/>
    <property name="ModifyTime" column="ModifyTime" insert="false"/>
    <property name="Modifier" column="Modifier" insert="false"/>
    <property name="Lifecycle" column="Lifecycle" />

    <many-to-one name="HR_Base_Personnel" not-found="ignore">
      <column name="PersonID" sql-type="nvarchar" not-null="false"  />
    </many-to-one>
    <bag name="Attachments" where="ObjectType='HR_KQ_Leave'" batch-size="30" cascade="delete" >
      <key column="ObjectId"/>
      <one-to-many class="ZLERP.Model.Attachment" />
    </bag>
  </class>


</hibernate-mapping>